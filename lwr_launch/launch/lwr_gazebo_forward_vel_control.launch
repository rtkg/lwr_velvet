<?xml version="1.0"?>

<launch>
<!--Convenience launch file to start gazebo + control--> 

<!--The hardware_interface parameter determines which hardware inteface is used-->
<include file="$(find lwr_gazebo)/launch/lwr_world.launch">
  <arg name="hardware_interface" value="VelocityJointInterface" />
</include>

<include file="$(find lwr_control)/launch/lwr_control.launch">
  <arg name="hardware_interface" value="VelocityJointInterface" />
  <arg name="controllers" value="joint_state_controller
			         lwr_joint_1_forward_vel_controller
				 lwr_joint_2_forward_vel_controller
				 lwr_joint_3_forward_vel_controller
				 lwr_joint_4_forward_vel_controller
				 lwr_joint_5_forward_vel_controller
				 lwr_joint_6_forward_vel_controller
				 lwr_joint_7_forward_vel_controller" />
</include>

<!-- Launch RQT for control tuning -->
 <node name="lwr_rqt" pkg="rqt_gui" type="rqt_gui" respawn="false"
	output="screen" args="--perspective-file $(find lwr_control)/launch/lwr_forward_vel_control.perspective"/>

</launch>
